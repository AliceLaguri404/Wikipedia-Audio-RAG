# Sarvam AI Configuration
SARVAM_API_KEY=your_sarvam_api_key_here
SARVAM_ASR_MODEL=saaras:v3
SARVAM_DEFAULT_LANGUAGE=en-IN
HF_API_TOKEN: str = your_huggingface_api_token_here
# LLM Configuration
LLM_PROVIDER=gemini
# Options: "gemini" or "openai"

# Gemini Configuration (Recommended - FREE!)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=500

# OpenAI Configuration (Alternative - Paid)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=500

# Application Settings
APP_NAME=Voice-Enabled RAG System
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Chunking Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=150

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Vector Database Configuration
VECTOR_DB_BACKEND=qdrant
# Options: "chroma" or "qdrant"
CHROMA_PERSIST_DIR=./storage/chroma_db
QDRANT_PATH=./storage/qdrant_db
QDRANT_URL=
COLLECTION_NAME=wiki_knowledge
TOP_K_RESULTS=2

# Storage Paths
STORAGE_DIR=./storage
DOCUMENTS_DIR=./storage/documents
TEMP_DIR=./storage/temp

# Wikipedia Scraping
WIKIPEDIA_API_URL=https://en.wikipedia.org/w/api.php
SCRAPER_USER_AGENT=VoiceRAGBot/1.0 (Educational Purpose)
SCRAPER_TIMEOUT=10

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Caching
ENABLE_DOCUMENT_CACHE=True
ENABLE_COLLECTION_CACHE=True
CACHE_TTL=3600

# File Upload
MAX_UPLOAD_SIZE=52428800
# 50MB in bytes

# CORS Settings
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=True
CORS_METHODS=["*"]
CORS_HEADERS=["*"]